
public class ArraySorts {
	int i,j,q;
	int key;
	
	//插入排序
	public int[] InsertSort(int[] arr){
		for(i = 1; i < arr.length; i++){
			key = arr[i];
			j = i - 1;
			while(j>0 && arr[j] > key)
				arr[j+1] = arr[j++];
			arr[j+1] = key;
		}
		return arr;
	}
	
	//归并排序
	public int[] mergeSort(int[] arr, int p, int r){
		if(p<r){
			q = (r-p+1)/2;
			mergeSort(arr,p,q);
			mergeSort(arr,q+1,r);
			merge(arr,p,q,r);	
		}
		return arr;
		
	}
	//归并排序中的合并操作
	private void merge(int[] arr, int p, int q, int r) {
		// TODO Auto-generated method stub
		int n1 = p-q+1;
		int n2 = r-q;
		int[] arr1 = new int[n1+1];
		int[] arr2 = new int[n2+1];
		for(i = 0;i < n1;i++)
			arr1[i] = arr[p+i];
		arr[n1+1] = Integer.MAX_VALUE;
		for(i=0;i < n2;i++)
			arr2[i] = arr[q+i+1];
		arr[n2+1] = Integer.MAX_VALUE;
		i = j = 0;
		for(int k = p; p <= r; k++){
			if(arr1[i] < arr2[j])
				arr[k] = arr1[i++];
			else
				arr[k] = arr2[j++]
		}
	}
	
	//选择排序
	public int[] selectionSort(int[] arr){
		int smallest;
		for(i = 0; i < arr.length - 1; i++){
			smallest = i;
			for(j = i+1; j < arr.length; j++){
				if(arr[j] < smallest)
					smallest = j;
			}
			swap(arr,i,smallest);
			}
		return arr;
		}

	private void swap(int[] arr, int i, int smallest) {
		// TODO Auto-generated method stub
		int temp = arr[i];
		arr[i] = arr[smallest];
		arr[smallest] = temp;
	}
		
	//冒泡排序
	public int[] bubbleSort(int[] arr){
		for(i = 0; i < arr.length; i++){
			for(j=arr.length; j <= i+1; j--){
				if(arr[j] < arr[j-1])
					swap(arr,j,j-1);
			}
		}
		return arr;
	}
	
	//计算逆序对
	public int inversionCount(int[] arr, int p, int r){
		int count = 0;
		if(p < r){
			q = (r-p+1)/2;
			count += inversionCount(arr,p,q);
			count += inversionCount(arr,q+1,r);
			count += mergeCount(arr,p,q,r);
		}
		return count;
	}

	private int mergeCount(int[] arr, int p, int q, int r) {
		// TODO Auto-generated method stub
		int n1 = p-q+1;
		int n2 = r-q;
		int[] arr1 = new int[n1+1];
		int[] arr2 = new int[n2+1];
		for(i = 0;i < n1;i++)
			arr1[i] = arr[p+i];
		arr[n1+1] = Integer.MAX_VALUE;
		for(i=0;i < n2;i++)
			arr2[i] = arr[q+i+1];
		arr[n2+1] = Integer.MAX_VALUE;
		i = j = 0;
		int count = 0;
		for(int k = p; p <= r; k++){
			if(arr1[i] > arr2[j])
				count += n1-i +1;
				arr[k] = arr1[j++];
			else
				arr[k] = arr2[i++]
		}
		return count;
	}
	
	
	
	
	
	
	
	
	
	
}

