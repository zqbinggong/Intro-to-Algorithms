		mergeSort(arr,0,arr.length-1);
		

	}
	
	int count = 0;
	
	public static void mergeSort(int[] arr, int p, int r){
		if(p<r){
			int q = (r+p)/2;
			mergeSort(arr,p,q);
			mergeSort(arr,q+1,r);
			merge(arr,p,q,r);	
		}
	
		
	}
	//归并排序中的合并操作
	private static void merge(int[] arr, int p, int q, int r) {
		count++;
