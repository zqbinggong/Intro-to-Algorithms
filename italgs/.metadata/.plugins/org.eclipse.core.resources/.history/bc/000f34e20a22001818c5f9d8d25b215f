
public class HeapTools {
	
	//堆排序
	public static void heapSort(int[] arr){
		buildMaxHeap(arr);
		for(int i = arr.length -1; i <= 1; i--){
			swap(arr,i,0);
			heap_size -= 1;
			maxHeapify(arr, 0);
		}
	}

	//优先队列部分
	//返回最大值
	public static int maximum(int[] arr){
		return arr[0];
	}
	
	//删除并返回最大元素，保持结构不变
	public static int heapExtractMax(int[] arr){
		
	}
	
	
	
	
	
	
	
	
	
}
